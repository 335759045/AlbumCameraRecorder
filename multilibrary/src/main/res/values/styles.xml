<resources>
    <!-- region ===================================== Theme Blue ===================================== -->

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Blue</item>
        <item name="album.dropdown.title.color">@color/blue_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/blue_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/blue_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_blue</item>
        <item name="album.emptyView.textColor">@color/blue_album_empty_view</item>
        <item name="item.placeholder">@color/blue_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/blue_item_checkCircle_backgroundColor</item>
        <item name="item.checkCircle.borderColor">@color/blue_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/blue_page_bg</item>
        <item name="bottomToolbar.bg">@color/blue_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/blue_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/blue_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">@color/blue_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/blue_preview_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Popup.Blue</item>
        <item name="capture.textColor">@color/blue_capture</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="click_long_button_round_border">#ffffffff</item>
        <item name="click_long_button_inner_circle_in_operation">@color/blue_primary</item>
        <item name="click_long_button_inner_circle_no_operation">#99ffffff</item>
    </style>

    <style name="Toolbar.Blue" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Blue" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/blue_album_popup_bg</item>
    </style>

    <!-- endregion ===================================== Theme Blue ===================================== -->

    <!-- region ===================================== Theme Dracula  ===================================== -->

    <style name="AppTheme.Dracula" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dracula_primary</item>
        <item name="colorPrimaryDark">@color/dracula_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Dracula</item>
        <item name="album.dropdown.title.color">@color/dracula_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/dracula_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/dracula_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_dracula</item>
        <item name="album.emptyView.textColor">@color/dracula_album_empty_view</item>
        <item name="item.placeholder">@color/dracula_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/dracula_item_checkCircle_backgroundColor</item>
        <item name="item.checkCircle.borderColor">@color/dracula_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/dracula_page_bg</item>
        <item name="bottomToolbar.bg">@color/dracula_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/dracula_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/dracula_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">@color/dracula_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/dracula_preview_bottom_toolbar_apply</item>
        <item name="android:listPopupWindowStyle">@style/Popup.Dracula</item>
        <item name="listPopupWindowStyle">@style/Popup.Dracula</item>
        <item name="capture.textColor">@color/dracula_capture</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 录制的按钮样式 -->
        <item name="click_long_button_round_border">#ffffffff</item> <!-- 按钮外圈颜色 -->
        <item name="click_long_button_inner_circle_in_operation">@color/dracula_primary</item> <!-- 按钮内圈长按中的颜色 -->
        <item name="click_long_button_inner_circle_no_operation">#99ffffff</item> <!-- 按钮内圈默认的颜色 -->
    </style>

    <style name="Toolbar.Dracula" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Dracula" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/dracula_album_popup_bg</item>
    </style>

    <!-- endregion ===================================== Theme Dracula ===================================== -->



</resources>
